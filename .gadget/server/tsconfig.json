{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./types",
    "esModuleInterop": true,
    "isolatedDeclarations": true,
    "isolatedModules": true,
    "lib": [
      "es2021",
      "dom"
    ],
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "es2021",
    "types": [
      "node"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}